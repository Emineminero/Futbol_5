<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jlaurenzano.futbol5equipos.MainActivity"
    android:focusable="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jugador1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:inputType="textPersonName"
        android:text="Jugador 1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:allowUndo="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jugador2"
        android:inputType="textPersonName"
        android:text="Jugador 2"
        android:layout_below="@+id/jugador1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jugador3"
        android:inputType="textPersonName"
        android:text="Jugador 3"
        android:layout_below="@+id/jugador2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jugador4"
        android:inputType="textPersonName"
        android:text="Jugador 4"
        android:layout_below="@+id/jugador2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jugador5"
        android:inputType="textPersonName"
        android:text="Jugador 5"
        android:layout_below="@+id/jugador3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jugador8"
        android:inputType="textPersonName"
        android:text="Jugador 8"
        android:layout_above="@+id/jugador9"
        android:layout_alignStart="@+id/jugador7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jugador6"
        android:inputType="textPersonName"
        android:text="Jugador 6"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/team2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jugador7"
        android:inputType="textPersonName"
        android:text="Jugador 7"
        android:layout_below="@+id/jugador1"
        android:layout_alignStart="@+id/jugador6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jugador9"
        android:inputType="textPersonName"
        android:text="Jugador 9"
        android:layout_below="@+id/jugador3"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jugador10"
        android:inputType="textPersonName"
        android:text="Jugador 10"
        android:layout_below="@+id/jugador9"
        android:layout_alignEnd="@+id/team2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mezclar"
        android:id="@+id/armarCuadros"
        android:focusable="true"
        android:onClick="buttonOnClick"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/jugador10"
        android:layout_centerHorizontal="true" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/team1"
        android:choiceMode="none"
        android:layout_toStartOf="@+id/armarCuadros"
        android:layout_below="@+id/armarCuadros" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/team2"
        android:choiceMode="none"
        android:layout_toEndOf="@+id/armarCuadros"
        android:layout_alignTop="@+id/team1"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/estado1"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/estado2"
        android:layout_alignTop="@+id/estado1"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
